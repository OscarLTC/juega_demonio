---
import "../styles/global.css";
import "../config/date";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import { ClientRouter } from "astro:transitions";

interface Props {
  title: string;
  showSocialLinks?: boolean;
  socialLinksVariant?: "light" | "dark";
}

const {
  title,
  showSocialLinks = true,
  socialLinksVariant = "light",
} = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Comunidad Juega Demonio" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <link
      rel="preload"
      href="/fonts/vietnam/BeVietnamPro-Regular.ttf"
      as="font"
      type="font/ttf"
      crossorigin="anonymous"
    />
    <link
      rel="preload"
      href="/fonts/vietnam/BeVietnamPro-Bold.ttf"
      as="font"
      type="font/ttf"
      crossorigin="anonymous"
    />
    <link
      rel="preload"
      href="/fonts/nata/NataSans-Regular.ttf"
      as="font"
      type="font/ttf"
      crossorigin="anonymous"
    />

    <ClientRouter />
    <title>{title}</title>
  </head>
  <body class="bg-black text-light-gray min-h-screen flex flex-col">
    <Header />

    <main class="flex-1 mx-auto w-full">
      <slot />
    </main>

    <Footer
      showSocialLinks={showSocialLinks}
      socialLinksVariant={socialLinksVariant}
    />
  </body>
</html>
