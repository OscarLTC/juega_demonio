---
import type { ImageMetadata } from "astro";
import { Image } from "astro:assets";

interface Props {
  heroImage: ImageMetadata;
  heroAlt: string;
  heroTitle: string;
  heroButtonText: string;
  heroButtonHref: string;
  heroButtonVariant?: "primary" | "secondary";
}

const {
  heroImage,
  heroAlt,
  heroTitle,
  heroButtonText,
  heroButtonHref,
  heroButtonVariant = "secondary"
} = Astro.props;

const buttonStyles = {
  primary: "bg-intense-pink text-white hover:bg-intense-pink/90",
  secondary: "bg-pale-pink text-intense-pink hover:bg-white"
};
---

<div class="bg-[#171717] min-h-[calc(100vh-100px)] relative overflow-hidden">
  <!-- Efecto de glow rosa -->
  <div
    class="absolute -right-32 top-1/3 w-[400px] h-[400px] bg-intense-pink/30 rounded-full blur-[150px] pointer-events-none"
  />

  <div class="flex flex-col lg:flex-row min-h-[calc(100vh-100px)]">
    <!-- Lado izquierdo - Imagen con gradiente -->
    <div class="relative w-full lg:w-1/2 min-h-[300px] lg:min-h-full">
      <div class="absolute inset-0">
        <Image
          src={heroImage}
          alt={heroAlt}
          class="w-full h-full object-cover"
          widths={[400, 800, 1200]}
          sizes="(max-width: 1024px) 100vw, 50vw"
        />
        <!-- Gradiente overlay -->
        <div class="absolute inset-0 bg-gradient-to-b from-transparent via-transparent to-intense-pink/50" />
      </div>

      <!-- Contenido sobre la imagen -->
      <div class="absolute bottom-8 lg:bottom-16 left-6 lg:left-10 right-6 z-10">
        <h2 class="font-family-display font-bold text-3xl sm:text-4xl lg:text-5xl text-white leading-tight mb-6">
          {heroTitle}
        </h2>
        <a
          href={heroButtonHref}
          class:list={[
            "inline-flex items-center justify-center",
            "font-family-display font-bold text-xl sm:text-2xl lg:text-3xl",
            "px-6 lg:px-8 py-2 lg:py-3 rounded-xl transition-colors",
            buttonStyles[heroButtonVariant]
          ]}
        >
          {heroButtonText}
        </a>
      </div>
    </div>

    <!-- Lado derecho - Contenido del formulario -->
    <div class="w-full lg:w-1/2 flex items-center justify-center px-6 py-12 lg:py-0">
      <div class="w-full max-w-md">
        <slot />
      </div>
    </div>
  </div>
</div>
