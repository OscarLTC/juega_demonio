---
import { Image } from "astro:assets";
import type { ImageMetadata } from "astro";

interface Props {
  name: string;
  image: ImageMetadata | string;
  class?: string;
}

const { name, image, class: className = "" } = Astro.props;
---

<div
  class={`border-2 border-intense-pink rounded-xl py-4 sm:py-6 h-64 sm:h-80 flex flex-col items-center justify-between bg-black hover:bg-white/5 transition-colors group cursor-pointer ${className}`}
>
  <div class="flex-1 flex items-center justify-center w-full px-4">
    {
      typeof image === "string" ? (
        <img
          src={image}
          alt={name}
          class="w-full h-auto max-h-32 sm:max-h-40 object-contain drop-shadow-[0_0_15px_rgba(255,255,255,0.1)] group-hover:scale-110 transition-transform duration-300"
          loading="lazy"
        />
      ) : (
        <Image
          src={image}
          alt={name}
          class="w-full h-auto max-h-32 sm:max-h-40 object-contain drop-shadow-[0_0_15px_rgba(255,255,255,0.1)] group-hover:scale-110 transition-transform duration-300"
          width={500}
          height={500}
          loading="lazy"
        />
      )
    }
  </div>

  <h3
    class="text-white text-2xl sm:text-3xl md:text-4xl font-family-nata uppercase -skew-x-6 mt-4 text-center px-2"
  >
    {name}
  </h3>
</div>
