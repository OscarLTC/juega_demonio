---
import type { Prize } from "../../types/prize";
import PrizeGridCard from "./PrizeGridCard.astro";

interface Props {
  prizes: Prize[];
}

const { prizes } = Astro.props;
---

<section class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 my-16">
  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4 gap-y-16">
    {
      prizes.map((prize, index) => (
        <PrizeGridCard
          name={prize.name}
          image={prize.image}
          date={prize.date}
          link={prize.link}
          priority={index < 3}
        />
      ))
    }
  </div>
</section>
