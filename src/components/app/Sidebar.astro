---
const pathname = Astro.url.pathname

const userNavItems = [
  { href: '/app/dashboard', icon: 'home', label: 'Dashboard' },
  { href: '/app/suscripciones', icon: 'credit-card', label: 'Suscripciones' },
  { href: '/app/super-chances', icon: 'sparkles', label: 'Super Chances' },
  { href: '/app/ordenes', icon: 'shopping-bag', label: 'Mis Ordenes' },
]

const adminNavItems = [
  { href: '/app/admin/sorteos', icon: 'trophy', label: 'Sorteos' },
  { href: '/app/admin/participantes', icon: 'users', label: 'Participantes' },
  { href: '/app/admin/ordenes', icon: 'shopping-bag', label: 'Ordenes' },
  { href: '/app/admin/auditoria', icon: 'file-text', label: 'Auditoria' },
]

function isActive(href: string) {
  return pathname === href || pathname === href + '/'
}
---

<aside
  id="app-sidebar"
  class="fixed top-0 left-0 h-full w-72 bg-dark border-r border-charcoal/30 z-50 transform -translate-x-full lg:translate-x-0 transition-transform"
>
  <div class="flex flex-col h-full">
    <!-- Logo -->
    <div class="h-16 flex items-center justify-between px-4 border-b border-charcoal/30">
      <a href="/app/dashboard" class="flex items-center gap-2">
        <img src="/logo.png" alt="Juega Demonio" class="h-8" />
        <span class="font-bold text-xl text-light-gray font-family-display uppercase">Juega Demonio</span>
      </a>
      <button
        id="sidebar-close"
        class="lg:hidden p-2 rounded-lg hover:bg-white/10 text-gray"
      >
        <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M18 6 6 18"/><path d="m6 6 12 12"/></svg>
      </button>
    </div>

    <!-- Navigation -->
    <nav class="flex-1 p-4 space-y-1 overflow-y-auto">
      {userNavItems.map((item) => (
        <a
          href={item.href}
          class:list={[
            'flex items-center gap-3 px-4 py-3 rounded-lg transition-colors',
            isActive(item.href)
              ? 'bg-intense-pink/20 text-intense-pink font-medium'
              : 'text-gray hover:bg-white/5'
          ]}
        >
          <span class="w-5 h-5" data-icon={item.icon}></span>
          <span>{item.label}</span>
        </a>
      ))}

      <!-- Admin section (hidden by default, shown via JS) -->
      <div id="admin-section" class="hidden">
        <div class="pt-4 pb-2">
          <button
            id="admin-toggle"
            class="flex items-center justify-between w-full px-4 py-2 text-sm font-semibold text-dark-gray uppercase tracking-wider"
          >
            <span>Admin</span>
            <svg id="admin-chevron" xmlns="http://www.w3.org/2000/svg" class="w-4 h-4 transition-transform rotate-180" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="m6 9 6 6 6-6"/></svg>
          </button>
        </div>
        <div id="admin-nav" class="space-y-1">
          {adminNavItems.map((item) => (
            <a
              href={item.href}
              class:list={[
                'flex items-center gap-3 px-4 py-3 rounded-lg transition-colors',
                isActive(item.href)
                  ? 'bg-intense-pink/20 text-intense-pink font-medium'
                  : 'text-gray hover:bg-white/5'
              ]}
            >
              <span class="w-5 h-5" data-icon={item.icon}></span>
              <span>{item.label}</span>
            </a>
          ))}
        </div>
      </div>
    </nav>

    <!-- User section -->
    <div class="p-4 border-t border-charcoal/30">
      <div class="flex items-center gap-3 mb-3">
        <div class="w-10 h-10 rounded-full bg-intense-pink/20 flex items-center justify-center">
          <span id="user-initial" class="text-intense-pink font-semibold">U</span>
        </div>
        <div class="flex-1 min-w-0">
          <p id="user-name" class="font-medium text-light-gray truncate">Usuario</p>
          <p id="user-email" class="text-sm text-dark-gray truncate"></p>
        </div>
      </div>
      <button
        id="logout-btn"
        class="w-full flex items-center justify-center gap-2 px-4 py-2 text-red-400 hover:bg-red-500/10 rounded-lg transition-colors"
      >
        <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4"/><polyline points="16 17 21 12 16 7"/><line x1="21" x2="9" y1="12" y2="12"/></svg>
        <span>Cerrar Sesion</span>
      </button>
    </div>
  </div>
</aside>

<!-- Mobile overlay -->
<div id="sidebar-overlay" class="fixed inset-0 bg-black/50 z-40 hidden lg:hidden"></div>

<!-- Inline SVG icons for nav items -->
<script is:inline>
  const icons = {
    'home': '<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="m3 9 9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"/><polyline points="9 22 9 12 15 12 15 22"/></svg>',
    'credit-card': '<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect width="20" height="14" x="2" y="5" rx="2"/><line x1="2" x2="22" y1="10" y2="10"/></svg>',
    'sparkles': '<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="m12 3-1.912 5.813a2 2 0 0 1-1.275 1.275L3 12l5.813 1.912a2 2 0 0 1 1.275 1.275L12 21l1.912-5.813a2 2 0 0 1 1.275-1.275L21 12l-5.813-1.912a2 2 0 0 1-1.275-1.275L12 3Z"/><path d="M5 3v4"/><path d="M19 17v4"/><path d="M3 5h4"/><path d="M17 19h4"/></svg>',
    'shopping-bag': '<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M6 2 3 6v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2V6l-3-4Z"/><path d="M3 6h18"/><path d="M16 10a4 4 0 0 1-8 0"/></svg>',
    'trophy': '<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M6 9H4.5a2.5 2.5 0 0 1 0-5H6"/><path d="M18 9h1.5a2.5 2.5 0 0 0 0-5H18"/><path d="M4 22h16"/><path d="M10 14.66V17c0 .55-.47.98-.97 1.21C7.85 18.75 7 20.24 7 22"/><path d="M14 14.66V17c0 .55.47.98.97 1.21C16.15 18.75 17 20.24 17 22"/><path d="M18 2H6v7a6 6 0 0 0 12 0V2Z"/></svg>',
    'users': '<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2"/><circle cx="9" cy="7" r="4"/><path d="M22 21v-2a4 4 0 0 0-3-3.87"/><path d="M16 3.13a4 4 0 0 1 0 7.75"/></svg>',
    'file-text': '<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M15 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V7Z"/><path d="M14 2v4a2 2 0 0 0 2 2h4"/><path d="M10 9H8"/><path d="M16 13H8"/><path d="M16 17H8"/></svg>',
  };

  var ACTIVE = 'flex items-center gap-3 px-4 py-3 rounded-lg transition-all duration-200 bg-intense-pink/20 text-intense-pink font-medium';
  var INACTIVE = 'flex items-center gap-3 px-4 py-3 rounded-lg transition-all duration-200 text-gray hover:bg-white/5';

  function updateActiveLink() {
    var path = window.location.pathname.replace(/\/$/, '');
    document.querySelectorAll('#app-sidebar nav a[href]').forEach(function(link) {
      var href = link.getAttribute('href').replace(/\/$/, '');
      link.className = (href === path) ? ACTIVE : INACTIVE;
    });
  }

  function initSidebar() {
    // Set icons
    document.querySelectorAll('[data-icon]').forEach(function(el) {
      var iconName = el.getAttribute('data-icon');
      if (icons[iconName]) el.innerHTML = icons[iconName];
    });

    // Load user info from localStorage
    try {
      var cachedUser = JSON.parse(localStorage.getItem('cachedUser') || '{}');
      if (cachedUser.displayName) {
        document.getElementById('user-initial').textContent = cachedUser.displayName.charAt(0).toUpperCase();
        document.getElementById('user-name').textContent = cachedUser.displayName;
      }
      if (cachedUser.email) {
        document.getElementById('user-email').textContent = cachedUser.email;
      }
      if (cachedUser.role === 'ADMIN') {
        document.getElementById('admin-section').classList.remove('hidden');
      }
    } catch (e) {}

    // Sidebar toggle (mobile)
    var sidebar = document.getElementById('app-sidebar');
    var overlay = document.getElementById('sidebar-overlay');
    var closeBtn = document.getElementById('sidebar-close');
    var openBtn = document.getElementById('sidebar-open');

    function openSidebar() {
      sidebar.classList.remove('-translate-x-full');
      sidebar.classList.add('translate-x-0');
      overlay.classList.remove('hidden');
    }

    function closeSidebar() {
      sidebar.classList.add('-translate-x-full');
      sidebar.classList.remove('translate-x-0');
      overlay.classList.add('hidden');
    }

    if (openBtn) openBtn.addEventListener('click', openSidebar);
    if (closeBtn) closeBtn.addEventListener('click', closeSidebar);
    if (overlay) overlay.addEventListener('click', closeSidebar);

    // Admin menu toggle
    var adminToggle = document.getElementById('admin-toggle');
    var adminNav = document.getElementById('admin-nav');
    var adminChevron = document.getElementById('admin-chevron');

    if (adminToggle) {
      adminToggle.addEventListener('click', function() {
        var isOpen = !adminNav.classList.contains('hidden');
        if (isOpen) {
          adminNav.classList.add('hidden');
          adminChevron.classList.remove('rotate-180');
        } else {
          adminNav.classList.remove('hidden');
          adminChevron.classList.add('rotate-180');
        }
      });
    }

    // Logout
    var logoutBtn = document.getElementById('logout-btn');
    if (logoutBtn) {
      logoutBtn.addEventListener('click', function() {
        localStorage.removeItem('accessToken');
        localStorage.removeItem('refreshToken');
        localStorage.removeItem('cachedUser');
        window.location.href = '/app/login';
      });
    }

    updateActiveLink();
  }

  initSidebar();
</script>
